          "models": ["gpt-4o", "gpt-4-turbo", "gpt-3.5-turbo"],
          "use_cases": ["General intelligence", "Code generation", "Analysis"],
          "api_key": "env.OPENAI_API_KEY",
          "rate_limits": {
            "requests_per_minute": 500,
            "tokens_per_minute": 150000
          }
        },
        
        "anthropic": {
          "models": ["claude-sonnet-4", "claude-opus-4"],
          "use_cases": ["Long context", "Complex reasoning", "Safety-critical"],
          "api_key": "env.ANTHROPIC_API_KEY"
        },
        
        "google": {
          "models": ["gemini-pro", "gemini-ultra"],
          "use_cases": ["Multimodal", "Real-time", "Search integration"]
        },
        
        "local_models": {
          "ollama": {
            "models": ["llama3", "mistral", "codellama"],
            "use_cases": ["Privacy-sensitive", "No API costs", "Low latency"],
            "endpoint": "http://localhost:11434"
          }
        },
        
        "specialized_models": {
          "embeddings": "text-embedding-3-large | voyage-2",
          "image_generation": "dall-e-3 | stable-diffusion",
          "image_analysis": "gpt-4-vision | claude-3-opus",
          "speech_to_text": "whisper-1",
          "text_to_speech": "tts-1-hd"
        }
      },
      
      "model_router": {
        "purpose": "Route requests to optimal model based on task",
        "strategy": {
          "cost_optimization": "Use cheaper models when possible",
          "latency_optimization": "Use fastest models for real-time",
          "quality_optimization": "Use best models for critical tasks",
          "fallback_chain": ["primary_model", "backup_model", "local_model"]
        }
      }
